<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlArticle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivArticleImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tvArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/ivArrow"
        android:layout_toEndOf="@+id/ivArticleImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_black"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right" />

    <TextView
        android:id="@+id/tvCreatedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvArticleTitle"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/ivArrow"
        android:layout_toEndOf="@+id/ivArticleImage"
        android:ellipsize="end"
        android:maxLines="2" />

    <TextView
        android:id="@+id/tvPublishedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCreatedBy"
        android:layout_toStartOf="@+id/ivArrow"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tvCreatedBy"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/tvPublishedDate"
        android:src="@drawable/ic_calendar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvPublishedDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_black" />

</RelativeLayout>